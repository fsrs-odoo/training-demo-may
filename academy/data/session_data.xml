<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="sequence_session" model="ir.sequence">
            <field name="name">Session Number</field>
            <field name="code">session.number</field>
            <field name="prefix">S</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        <!-- Session Stages -->
        <record id="stage_new" model="academy.session.stage">
            <field name="name">Not Started</field>
            <field name="sequence">10</field>
            <field name="state">new</field>
        </record>
        <record id="stage_open" model="academy.session.stage">
            <field name="name">In Progress</field>
            <field name="sequence">20</field>
            <field name="state">open</field>
        </record>
        <record id="stage_done" model="academy.session.stage">
            <field name="name">Finalized</field>
            <field name="sequence">90</field>
            <field name="state">done</field>
        </record>
        <record id="stage_cancel" model="academy.session.stage">
            <field name="name">Canceled</field>
            <field name="sequence">95</field>
            <field name="state">cancel</field>
        </record>
    </data>
</odoo>