<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="session_view_form" model="ir.ui.view">
        <field name="name">session.view.form</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <form string="Session View">
                <header></header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <h2><field name="session_number"/></h2>
                    <group>
                        <group>
                            <separator string="Session Data"/>
                            <field name="course_id"/>
                            <field name="instructor_id"/>
                            <label for="date_start" string="Date"/>
                            <div class="o_row">
                                <field name="date_start" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date':'date_end'}"/>
                                <i class="fa fa-long-arrow-right" aria-label="Arrow Icon"/>
                                <field name="date_end" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date':'date_start'}"/>
                            </div>
                            <field name="duration"/>
                        </group>
                        <group>
                            <separator string="Other Fields"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
<!--            Step 4 - Add Div -->
                <div class="oe_chatter">
<!--                Step 5 - Add fields -->                 
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="message_follower_ids" widget="mail_followers"/>  
                    <field name="activity_ids" widget="mail_activity"/> 
                </div>
            </form>
        </field>
    </record>
    
    
    <record id="session_view_list" model="ir.ui.view">
        <field name="name">session.view.list</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <tree string="Session List">
                <field name="state"/>
                <field name="name" 
                       decoration-warning="state == 'new'" 
                       decoration-success="state == 'open'" 
                       decoration-danger="state == 'cancel'"/>
                <field name="session_number"/>
                <field name="course_id"/>
                <field name="instructor_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>
    
    <record id="session_view_search" model="ir.ui.view">
        <field name="name">session.view.search</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="session_number"/>
                <field name="course_id"/>
                <field name="instructor_id"/>
                <field name="date_start"/>
                <filter string="Start Date" name="start_date" date="date_start"/>
                <searchpanel>
                    <field name="course_id" select="multi" enable_counters="1"/>
                    <field name="instructor_id" avatar_field="avatar_128"/>
                </searchpanel>
            </search>
        </field>
    </record>    
    
    <record id="session_view_calendar" model="ir.ui.view">
        <field name="name">session.view.calendar</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <calendar string="Session Calendar"
                      date_start="date_start"
                      date_stop="date_end"
                      color="instructor_id"
                      mode="month">
                <field name="name"/>
                <field name="instructor_id" filters='1' avatar_field='avatar_128'/>
            </calendar>
        </field>
    </record>     
    
<!--     Step 6 Add Activity View -->
    <record id="session_view_activity" model="ir.ui.view">
        <field name="name">session.view.activity</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <activity string="Session's Activities">
<!--                 Step 7 Add Template -->
                <templates>
                    <div t-name="activity-box">
<!--                         Step 8 - Add Field-->
                        <div>
                            <field name="instructor_id"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>    
    <record model="ir.ui.view" id="session_view_kanban">
        <field name="name">academy.session.kanban</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <kanban default_group_by='stage_id'>
                <field name="instructor_id"/>
                <field name="student_ids"/>
                <field name="color" />
                <templates>
                    <div t-name="kanban-box">
                        <!-- Makes the kanban card clickable -->
                        <div class="oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle btn" role="button" data-toggle="dropdown" title="Dropdown menu" href="#"> 
                                    <span class="fa fa-ellipsis-v" />
                                </a>
                                <!-- Edit menu option -->
                                <t t-if="widget.editable">
                                    <a role="menuitem" type="edit"
                                       class="dropdown-item">Edit</a>
                                </t>
                                <!-- Delete menu option -->
                                <t t-if="widget.deletable">
                                    <a role="menuitem" type="delete"
                                       class="dropdown-item">Delete</a>
                                </t>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_image">
                                    <img alt="Course Avatar" t-att-src="kanban_image('odoo_academy.course', 'avatar_128', record.instructor_id.raw_value)"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="oe_kanban_details">
                                        <div>Instructor: <field name="instructor_id"/></div>
                                        <div><field name="date_start" widget="daterange"/> - <field name="date_end" widget="daterange"/></div>
                                        <div><field name="student_ids"/></div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">  
                                        <field name="kanban_state" widget="state_selection" options="{'hide_label': True}" />
                                        <field name="instructor_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                                <div class="oe_clear"/>
                            </div>
                        </div>
                    </div>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.ui.view" id="session_view_kanban">
        <field name="name">academy.session.kanban</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <kanban default_group_by='stage_id'>
                <field name="instructor_id"/>
                <field name="student_ids"/>
                <field name="color" />
                <templates>
                    <div t-name="kanban-box">
                        <!-- Makes the kanban card clickable -->
                        <div class="oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                           
                            </div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    
                                </div>
                                <div class="o_kanban_image">
                                   
                                </div>
                                <div class="o_kanban_record_body">
                                   
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                    </div> 
                                    <div class="oe_kanban_bottom_right">  
                                    </div>
                                </div>
                                <div class="oe_clear"/>
                            </div>
                        </div>
                    </div>
                </templates>
            </kanban>
        </field>
    </record>
    
</odoo>